<wxs module='filters' src='../../../filter/filter.wxs' />
<view style='overflow:hidden' data-id='{{item.msg_id}}' catchtap='toFeidianDetail'>
  <view class='user'>
    <jImage class='avatar' mode='aspectFill' src='{{item.author_user_info.avatar_large || "/img/default_avatar.png"}}' data-user_id='{{item.author_user_info.user_id}}' catchtap='toPersonal'></jImage>
    <view class='others'>
      <view class='l'>
        <view catchtap='toPersonal' data-user_id='{{item.author_user_info.user_id}}'>{{item.author_user_info.user_name}}</view>
        <view catchtap='toPersonal' data-user_id='{{item.author_user_info.user_id}}' class='jobtitle'>
          <text wx:if='{{item.author_user_info.job_title}}'>{{item.author_user_info.job_title}}</text>
          <text wx:if='{{item.author_user_info.company}}'> @ {{item.author_user_info.company}} </text>
          <text wx:if='{{item.author_user_info.job_title}}'> · </text>
          <text>{{filters.timeBefore(item.msg_Info.ctime)}}</text>
        </view>
      </view>
      <view class='r'>
        <image class='more' src='/img/ic_pin_more.png'></image>
      </view>
    </view>
  </view>
  <text decode class='content {{intro ? "intro" : ""}}'>{{item.msg_Info
.content}}</text>
  <view class='pictures' wx:if='{{item.msg_Info.pic_list && item.msg_Info.pic_list.length}}'>
    <!-- 大于等于两张图片 -->
    <view data-index='{{index}}' data-urls='{{item.msg_Info.pic_list}}' catchtap='preview' class='picture' style='width:33.33%;height:228rpx;' wx:key='index' wx:for='{{item.msg_Info.pic_list}}' wx:for-item='i' wx:if='{{item.msg_Info.pic_list.length >= 2}}'>
      <image class='img' wx:key='index' mode='aspectFill' src='{{i}}'></image>
    </view>
    <!-- 一张图片 -->
    <view data-index='{{index}}' data-urls='{{item.msg_Info.pic_list}}' catchtap='preview' class='picture' style='width:80%;' wx:if='{{item.msg_Info.pic_list.length === 1}}'>
      <image class='img' mode='widthFix' src='{{item.msg_Info.pic_list[0]}}'></image>
    </view>
  </view>
  <view wx:if='{{item.topic.title}}' class='tag'>{{item.topic.title}}</view>
</view>